<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.onboarding.OnboardingAvatarFragment">

    <TextView
        style="@style/TextTitle"
        android:text="@string/pick_your_avatar"
        app:layout_constraintBottom_toTopOf="@id/avatars_row_1"
        android:layout_marginBottom="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <LinearLayout
        android:id="@+id/avatars_row_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/avatars_row_2"
        app:layout_constraintHorizontal_bias="0.5"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed">

        <ImageView
            android:id="@+id/pick_avatar_1"
            style="@style/OnboardingAvatarContainer"
            android:src="@drawable/ic_avatar_1" />

        <ImageView
            android:id="@+id/pick_avatar_2"
            style="@style/OnboardingAvatarContainer"
            android:src="@drawable/ic_avatar_2" />

        <ImageView
            android:id="@+id/pick_avatar_3"
            style="@style/OnboardingAvatarContainer"
            android:src="@drawable/ic_avatar_3" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/avatars_row_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/avatars_row_3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/avatars_row_1">

        <ImageView
            android:id="@+id/pick_avatar_4"
            style="@style/OnboardingAvatarContainer"
            android:src="@drawable/ic_avatar_4" />

        <ImageView
            android:id="@+id/pick_avatar_5"
            style="@style/OnboardingAvatarContainer"
            android:src="@drawable/ic_avatar_5" />

        <ImageView
            android:id="@+id/pick_avatar_6"
            style="@style/OnboardingAvatarContainer"
            android:src="@drawable/ic_avatar_6" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/avatars_row_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/avatars_row_2">

        <ImageView
            android:id="@+id/pick_avatar_7"
            style="@style/OnboardingAvatarContainer"
            android:src="@drawable/ic_avatar_7" />

        <ImageView
            android:id="@+id/pick_avatar_8"
            style="@style/OnboardingAvatarContainer"
            android:src="@drawable/ic_avatar_8" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_tab2_next"
        style="@style/OnboardingPrimaryActionButton"
        android:text="@string/next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>